#ifndef BUFFER_HEADER
#define BUFFER_HEADER
#include "Editor.h"

typedef struct Buffer {
  i8 Text[128];
  i32 LeftIndex;
  i32 RightIndex;
} Buffer;

typedef struct LineManager {
  Buffer *Lines;
  i32 LeftIndex;
  i32 RightIndex;
} LineManager;

#define RANGE_EXCL(X, LEFT, RIGHT) (((X) > (LEFT)) && ((X) < (RIGHT)))
#define BUFFER_LEN 128

void Backspace(Buffer *TextBuffer);
void Insert(Buffer *TextBuffer, i8 CharToAdd);
void MoveCursor(Buffer *TextBuffer, i32 Direction);
i8 *PrintBuffer(Buffer *TextBuffer);

#endif
